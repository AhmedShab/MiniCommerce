<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message__error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email">Email</label>
                <input
                    class="<%= validationErrors.find(err => err.path === 'email') ? 'invalid' : ''  %>"
                    type="email" 
                    name="email"
                    id="email"
                    value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(err => err.path === 'password') ? 'invalid' : ''  %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="login-links">
            <p>Forgot your password? <a href="/reset">Reset it here</a>.</p>
            <p>Don't have an account? <a href="/signup">Sign up</a>.</p>
        </div>
    </main>
<%- include('../includes/end.ejs') %>
